    = f.text_area :first_name, class: "input-text", placeholder: "Сокращенное наименование на иностранном языке", autofocus: true
  .form-row
    = f.text_field :first_name, class: "input-text", placeholder: "КИО (код иностранной организации)", autofocus: true
  .form-row
    = f.text_field :first_name, class: "input-text", placeholder: "ИНН (Идентификационный номер налогоплательщика)", autofocus: true
  .form-row
    = f.text_field :last_name, class: "input-text", placeholder: "КПП (Код причины постановки на учет)"
